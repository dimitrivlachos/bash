# Local activate helper
mae() {
    local env_name="${1:-ENV}"
    local env_path=""
    if [ -d "./$env_name" ]; then
        env_path="$(pwd)/$env_name"
    elif [ -d "../$env_name" ]; then
        env_path="$(cd .. && pwd)/$env_name"
    else
        echo "No environment '$env_name' found"
        return 1
    fi
    mamba activate "$env_path"
}